<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP1.AdminPanel">
    <ScrollView>
        <VerticalStackLayout
            x:Name="MainLayout"
            Padding="30,0"
            Spacing="25">
            <Label Text="Админ-панель" FontSize="40" FontAttributes="Bold" HorizontalOptions="Center"/>
            <HorizontalStackLayout 
                HorizontalOptions="Center"
                Spacing="25">
                <Button Text="Касса" Clicked="CassaOpenButton"/>
                <Button Text="Отчет" Clicked="OrderOpenButton"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
