<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP1.UserRegister">
    <VerticalStackLayout Spacing="25" VerticalOptions="Fill" x:Name="StackLayoutMain">
        <ScrollView HeightRequest="500" VerticalOptions="Start">
            <VerticalStackLayout
                x:Name="MainLayout"
                Padding="30,0"
                Spacing="25">
                <ScrollView HeightRequest="600">
                    <FlexLayout x:Name="FlexLayoutContainer" Direction="Column">
                        
                    </FlexLayout>
                </ScrollView>
            </VerticalStackLayout>
        </ScrollView>
        <Button x:Name="Calculate" Text="Расчитать"/>
    </VerticalStackLayout>
</ContentPage>
