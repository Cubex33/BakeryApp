<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SP1.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="20"
            Spacing="20"
            HorizontalOptions="Fill">

            <Entry x:Name="UsernameInputField"
                   Text="user2"
                   Placeholder="Login"
                   HorizontalOptions="Fill"
                   HorizontalTextAlignment="Center"/>

            <Grid ColumnDefinitions="*,Auto"
                  HorizontalOptions="Fill">

                <Entry x:Name="PasswordInputField"
                       Text="pass906"
                       Placeholder="Password"
                       IsPassword="True"
                       HorizontalOptions="Fill"
                       HorizontalTextAlignment="Center"
                       Grid.Column="0"/>

                <Button x:Name="ShowPasswordButton"
                        Text="S"
                        Grid.Column="1"
                        Clicked="ShowPassword"/>
            </Grid>

            <Button Text="Sign in"
                    HorizontalOptions="Fill"
                    Clicked="SignIn"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
